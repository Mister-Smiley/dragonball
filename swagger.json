{
    "openapi": "3.0.0",
    "info": {
        "title": "Dragon Ball Rest Api",
        "description": "Restful api to provide information about the japanese anime",
        "termsOfService": "http://example.com/terms/",
        "contact": {
            "name": "Kaiosama",
            "url": "http://www.noonecares.com/support",
            "email": "support@noonecares.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.1"
    },
    "servers": [
        {
            "url": "https://localhost:{port}/{basePath}",
            "description": "development",
            "variables": {
                "port": {
                    "enum": [ "3000" ],
                    "default": "3000"
                },
                "basePath": {
                    "default": "api"
                }
            }
        }
    ],
    "components": {
        "schemas": {
            "User": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "profile": {
                  "type": "integer"
                }
              }
            },
            "Authenticated": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                }
              }
            },
            "Character": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "avatar": {
                  "type": "string"
                }
              }
            },
            "Saga": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "image": {
                        "type": "string"
                    }
                }
            },
            "Error": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "format": "int64"
                },
                "message": {
                  "type": "string"
                }
              }
            }
        }
    },
    "paths": {
        "/auth": {
            "post": {
              "tags": ["Endpoints"],
              "description": "This endpoint allows the user to authenticate and obtain interaction token",
              "operationId": "authenticate",
              "consumes": [
                "application/x-www-form-urlencoded"
              ],
              "produces": [
                "application/xml",
                "application/json"
              ],
              "requestBody": {
                  "description": "Username and password to get authenticated",
                  "required": true,
                  "content": {
                    "application/x-www-form-urlencoded": {
                      "schema": {
                        "$ref": "#/definitions/User"
                      }
                    }
                  }
              },
              "responses": {
                "200": {
                  "description": "Ok",
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/Authenticated"
                      }
                    }
                  }
                }
              }
            }
        },
        "/characters": {
          "get": {
            "tags": ["Endpoints"],
            "description": "Get characters info",
            "operationId": "get_characters",
            "parameters": [],
            "responses": {
              "200": {
                "description": "Ok",
                "content": {
                  "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/Character"
                    }
                  }
                }
              },
              "404": {
                  "description": "The specified resource was not found",
                  "content": {
                      "application/json": {
                          "schema": {
                              "$ref": "#components/schemas/Error"
                          }
                      }
                  }
              },
              "401": {
                "description": "Unauthorized",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#components/schemas/Error"
                        }
                    }
                }
              }
            }
          }
        },
        "/characters/{name}": {
            "get": {
                "tags": ["Endpoints"],
                "description": "Get a single character info",
                "operationId": "get_character",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "Name of the character being searched",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "style": "simple"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                          "application/json": {
                            "schema": {
                              "$ref": "#/components/schemas/Character"
                            }
                          }
                        }
                    }
                }
            }
        },
        "/sagas": {
            "get": {
                "tags": ["Endpoints"],
                "description": "Get sagas info",
                "operationId": "get_sagas",
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Saga"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/sagas/{name}": {
            "get": {
                "tags": ["Endpoints"],
                "description": "Get a single saga info",
                "operationId": "get_saga",
                "parameters": [
                  {
                    "name": "name",
                    "in": "path",
                    "description": "Name of the saga being searched",
                    "required": true,
                    "schema": {
                        "type": "string"
                    },
                    "style": "simple"
                  }
                ]
            }
        }
      },
      "definitions": {
        "User": {
          "type": "object",
          "properties": {
            "user": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          }
        }
      }
  }